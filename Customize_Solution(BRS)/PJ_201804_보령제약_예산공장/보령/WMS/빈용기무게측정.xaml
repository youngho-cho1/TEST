<ShopFloorUI:ShopFloorCustomWindow x:Class="보령.빈용기무게측정" 
           xmlns:ShopFloorUI="clr-namespace:ShopFloorUI;assembly=ShopFloorUI.Common"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
           xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
           xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
           xmlns:icommon="clr-namespace:LGCNS.iPharmMES.Common;assembly=LGCNS.iPharmMES.Common"
           xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
           xmlns:local="clr-namespace:보령"
           xmlns:localctrl="clr-namespace:보령.UserControls"                        
           Width="900" Height="Auto" Loaded="Main_Loaded"
           Title="빈용기무게측정" x:Name="Main">
    <ShopFloorUI:ShopFloorCustomWindow.Resources>
        <local:빈용기무게측정ViewModel x:Name="ViewModel"/>
    </ShopFloorUI:ShopFloorCustomWindow.Resources>
    <toolkit:BusyIndicator x:Name="BusyIn" IsBusy="{Binding IsBusy}" DataContext="{Binding Source={StaticResource ViewModel}}">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Loaded">
                <i:InvokeCommandAction Command="{Binding LoadedCommandAsync}" CommandParameter="{Binding ElementName=Main}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Grid x:Name="LayoutRoot" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0" x:Name="Header">
                <localctrl:CustomUIHeader CurOrder="{Binding ElementName=Main, Path=CurrentOrder}"
                                          OrderList="{Binding OrderList, Mode=TwoWay}"
                                          CanSelectOrderNo="{Binding CanSelectOrder, Mode=TwoWay}"/>
            </Grid>

            <Grid Grid.Row="1" x:Name="MainSection">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <sdk:Label Grid.Column="0" Content="용기 바코드" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBox Grid.Column="1" Name="txtVesselId" Margin="5" Text="{Binding VesselId, Mode=TwoWay}" KeyDown="txtVesselId_KeyDown" />
                    <TextBox Grid.Column="2" Margin="5" Text="{Binding TareWeight, Mode=TwoWay}" IsReadOnly="True" HorizontalContentAlignment="Right"/>
                    <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock Text="{Binding W[CUIScaleID], Source={StaticResource R}, FallbackValue='저울 ID'}"/>
                        <TextBlock Text=" : "/>
                        <TextBlock Text="{Binding ScaleId}"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="1" Name="btnRecord" Content="중량 확인" Width="80" Height="30" Margin="5" HorizontalAlignment="Left" IsEnabled="{Binding btnRecordEnable}" Command="{Binding RecordingCommand}"/>
                </Grid>
                <c1:C1DataGrid Grid.Row="2" HeadersVisibility="Column" AutoGenerateColumns="False"
                               Height="150"
                               CanUserAddRows="False" CanUserEditRows="False" CanUserRemoveRows="False" CanUserResizeColumns="False" CanUserResizeRows="False"
                               ItemsSource="{Binding IBCList}">
                    <c1:C1DataGrid.Columns>
                        <c1:DataGridTextColumn Header="{Binding W[CUIOrderNo], Source={StaticResource R}, FallbackValue='오더번호'}" Binding="{Binding PoId}"/>
                        <c1:DataGridTextColumn Header="{Binding W[CUIVesselId], Source={StaticResource R}, FallbackValue='용기 번호'}" Binding="{Binding VesselId}"/>
                        <c1:DataGridTextColumn Header="{Binding W[CUIScaleID], Source={StaticResource R}, FallbackValue='저울 ID'}" Binding="{Binding ScaleId}"/>
                        <c1:DataGridTextColumn Header="{Binding W[CUITareWeight], Source={StaticResource R}, FallbackValue='용기 무게'}" Binding="{Binding TareWeightStr}"/>
                    </c1:C1DataGrid.Columns>
                </c1:C1DataGrid>
            </Grid>
            
            <Grid x:Name="Footer" Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                    <TextBlock Text="{Binding Path=W[CUICurrentPrintName], Source={StaticResource R}, FallbackValue='프린트명'}" Margin="2,0"/>
                    <TextBlock Text="{Binding curPrintName, FallbackValue='N/A'}"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Margin="5,0" x:Name="btnChangeScale" Width="100" Height="30" Content="{Binding W[CUIChangeScaleButtonText], Source={StaticResource R}, FallbackValue=저울변경}" Command="{Binding ChangeScaleCommand}"/>
                    <Button Margin="5,0" x:Name="btnChangePrint" Width="100" Height="30" Content="{Binding W[CUIChangePrintButtonText], Source={StaticResource R}, FallbackValue=프린터변경}" Command="{Binding ChangePrintCommand}"/>
                    <Button Margin="5,0" Name="btnComfirm" Width="100" Height="30" Content="{Binding W[CUIDataWriteToEBRButtonText], Source={StaticResource R}, FallbackValue=기록}" Command="{Binding ComfirmCommandAsync}"/>
                    <Button Margin="5,0" Name="btnClose" Width="100" Height="30" Content="{Binding W[CUICloseButtonText], Source={StaticResource R}, FallbackValue=닫기}" Click="btnClose_Click" />
                </StackPanel>
            </Grid>
        </Grid>
    </toolkit:BusyIndicator>
</ShopFloorUI:ShopFloorCustomWindow>