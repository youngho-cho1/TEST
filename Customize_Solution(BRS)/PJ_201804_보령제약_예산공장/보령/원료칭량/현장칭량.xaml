<ShopFloor:ShopFloorCustomWindow x:Class="보령.현장칭량" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:ShopFloor="clr-namespace:ShopFloorUI;assembly=ShopFloorUI.Common"
           xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
           xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
           xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
           xmlns:local="clr-namespace:보령"
           Width="1000" Height="500"
           x:Name="Main" Loaded="Main_Loaded" Title="현장칭량">
    <ShopFloor:ShopFloorCustomWindow.Resources>
        <local:현장칭량ViewModel x:Key="VM"/>
        <Style TargetType="Button" x:Key="btnStyle">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="lblStyle">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="HeaderStyle">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ScaleValueStyle">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="TextBox" x:Key="txtStyle">
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>
        <Style TargetType="ScrollBar" x:Key="gdScroll">
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="MinWidth" Value="20"/>
        </Style>
    </ShopFloor:ShopFloorCustomWindow.Resources>
    <toolkit:BusyIndicator IsBusy="{Binding IsBusy}" DataContext="{Binding Source={StaticResource VM}}">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Loaded">
                <i:InvokeCommandAction Command="{Binding LoadedCommand}" CommandParameter="{Binding ElementName=Main}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Grid x:Name="LayoutRoot" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" x:Name="Header">

            </Grid>

            <Grid Grid.Row="1" x:Name="MainSection">
                <Grid.RowDefinitions>
                    <RowDefinition Height="90"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0" Grid.Column="0" x:Name="AllocationInfoSection">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Content="{Binding W[CUIWeighingInfoSetButtonText], Source={StaticResource R}, FallbackValue='칭량대상선택'}" 
                            HorizontalAlignment="Stretch" Margin="5" IsEnabled="{Binding AllocationbtnEnable}"
                            Command="{Binding SelectAllocationInfoCommandAsync}"/>
                    <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Content="{Binding W[CUISourceContainerScanButtonText], Source={StaticResource R}, FallbackValue='자재스캔'}" 
                            HorizontalAlignment="Stretch" Margin="5" IsEnabled="{Binding MtrlbtnEnable}"
                            Command="{Binding ScanMtrlCommandAsync}"/>

                    <TextBlock Grid.Row="0"  Grid.Column="2" Text="{Binding W[CUIMaterialID], Source={StaticResource R}, FallbackValue='자재ID'}"
                               Style="{StaticResource lblStyle}"/>
                    <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding MTRLID}"
                             Style="{StaticResource txtStyle}"/>

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding W[CUIMaterialName], Source={StaticResource R}, FallbackValue='자재명'}"
                               Style="{StaticResource lblStyle}"/>
                    <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding MTRLNAME}"
                             Style="{StaticResource txtStyle}"/>

                    <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding W[CUIStandardQuantity], Source={StaticResource R}, FallbackValue='기준량'}"
                               Style="{StaticResource lblStyle}"/>
                    <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding RESERVEQTY}"
                             Style="{StaticResource txtStyle}"/>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="0" x:Name="SourceContainerNDispeseContainer">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="원료 정보" Style="{StaticResource HeaderStyle}"/>
                    <c1:C1DataGrid x:Name="dgSourceContainer" Grid.Row="1" RowHeight="30" ScrollBarStyle="{StaticResource gdScroll}"
                                   AutoGenerateColumns="False" HeadersVisibility="Column" SelectionMode="SingleRow"
                                   CanUserAddRows="False" CanUserEditRows="False" CanUserRemoveRows="False"
                                   ItemsSource="{Binding BR_BRS_SEL_AreaWeighing_SourceContainer.OUTDATAs, Mode=TwoWay}"
                                   SelectedItem="{Binding curSeletedSourceContainer, Mode=TwoWay}">
                        <c1:C1DataGrid.Columns>
                            <c1:DataGridTextColumn Header="{Binding W[CUIStatus], Source={StaticResource R}, FallbackValue='상태'}" Width="55"
                                                   Binding="{Binding STATUS}"/>
                            <c1:DataGridTextColumn Header="{Binding W[CUIMaterialLotID], Source={StaticResource R}, FallbackValue='시험번호'}"
                                                   Binding="{Binding MLOTID}"/>
                            <c1:DataGridTextColumn Header="{Binding W[CUIMaterialSubLotID], Source={StaticResource R}, FallbackValue='원료배치번호'}"
                                                   Binding="{Binding MSUBLOTID}"/>
                            <c1:DataGridTextColumn Header="{Binding W[CUIUOM], Source={StaticResource R}, FallbackValue='단위'}" Width="50"
                                                   Binding="{Binding NOTATION}"/>
                            <c1:DataGridTextColumn Header="{Binding W[CUISourceContainerQuantity], Source={StaticResource R}, FallbackValue='재고'}"
                                                   Binding="{Binding MSUBLOTQTY}"/>
                            <c1:DataGridTextColumn Header="{Binding W[CUIUsedQuantity], Source={StaticResource R}, FallbackValue='사용량'}"
                                                   Binding="{Binding UsedWeight}"/>
                        </c1:C1DataGrid.Columns>
                    </c1:C1DataGrid>
                    <Rectangle Grid.Row="1" Fill="Transparent" Margin="0,0,20,20"/>
                    <TextBlock Grid.Row="2" Text="소분 정보" Style="{StaticResource HeaderStyle}"/>
                    <c1:C1DataGrid x:Name="dgDispenseHistory" Grid.Row="3" RowHeight="30" ScrollBarStyle="{StaticResource gdScroll}"
                                   AutoGenerateColumns="False" HeadersVisibility="Column" SelectionMode="SingleRow"
                                   CanUserAddRows="False" CanUserEditRows="False" CanUserRemoveRows="False"
                                   ItemsSource="{Binding BR_BRS_SEL_Charging_Solvent_History.OUTDATAs}">
                        <c1:C1DataGrid.Columns>
                            <c1:DataGridTextColumn Header="{Binding W[CUIMaterialLotID], Source={StaticResource R}, FallbackValue='시험번호'}"
                                                   Binding="{Binding MLOTID}"/>
                            <c1:DataGridTextColumn Header="{Binding W[CUIMaterialSubLotID], Source={StaticResource R}, FallbackValue='원료배치번호'}"
                                                   Binding="{Binding MSUBLOTID}"/>
                            <c1:DataGridTextColumn Header="{Binding W[CUIUOM], Source={StaticResource R}, FallbackValue='단위'}" Width="50"
                                                   Binding="{Binding NOTATION}"/>
                            <c1:DataGridTextColumn Header="{Binding W[CUIDispenseQuantity], Source={StaticResource R}, FallbackValue='소분'}"
                                                   Binding="{Binding DSPQTY}"/>
                            <c1:DataGridTextColumn Header="{Binding W[CUIChargingQuantity], Source={StaticResource R}, FallbackValue='실제투입량'}"
                                                   Binding="{Binding CHGQTY}"/>
                            <c1:DataGridTemplateColumn Width="Auto">
                                <c1:DataGridTemplateColumn.CellTemplate>
                                    <c1:C1HierarchicalDataTemplate>
                                        <Button Name="btnDispense" Width="60" Height="30" Content="라벨발행"
                                                Command="{Binding PrintLabelCommandAsync, Source={StaticResource VM}}" CommandParameter="{Binding}"/>
                                    </c1:C1HierarchicalDataTemplate>
                                </c1:DataGridTemplateColumn.CellTemplate>
                            </c1:DataGridTemplateColumn>
                            <!--<c1:DataGridTemplateColumn>
                                <c1:DataGridTemplateColumn.CellTemplate>
                                    <c1:C1HierarchicalDataTemplate>
                                        <Button Name="btnRemained" HorizontalAlignment="Center" VerticalAlignment="Center" Width="40" Height="30" 
                                                    Command="{Binding RemoveCommandAsync, Source={StaticResource VM}}" CommandParameter="{Binding}"/>
                                    </c1:C1HierarchicalDataTemplate>
                                </c1:DataGridTemplateColumn.CellTemplate>
                            </c1:DataGridTemplateColumn>-->
                        </c1:C1DataGrid.Columns>
                    </c1:C1DataGrid>
                </Grid>

                <Grid Grid.Row="0" Grid.Column="1" x:Name="ScaleInfoSection">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Content="{Binding W[CUIScaleScanButtonText], Source={StaticResource R}, FallbackValue='저울스캔'}"
                            HorizontalAlignment="Stretch" Margin="5" IsEnabled="{Binding ScalebtnEnable}"
                            Command="{Binding ScanScaleCommandAsync}"/>

                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding W[CUIScaleID], Source={StaticResource R}, FallbackValue='저울ID'}" 
                               Style="{StaticResource lblStyle}"/>
                    <TextBox Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Text="{Binding Path=ScaleId}"
                             Style="{StaticResource txtStyle}"/>

                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding W[CUITareWeight], Source={StaticResource R}, FallbackValue='용기무게'}"
                               Style="{StaticResource lblStyle}"/>
                    <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding Path=TareWeight}"
                             Style="{StaticResource txtStyle}"/>

                    <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Margin="5,2" Content="{Binding W[CUIScaleTareButtonText], Source={StaticResource R}, FallbackValue=TARE}"
                                IsEnabled="{Binding TarebtnEnable}" Command="{Binding SetTareCommand}"/>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="1" x:Name="ScaleValueSection">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="{Binding UpperWeight}" Style="{StaticResource ScaleValueStyle}"/>
                    <Border Grid.Row="1" Background="{Binding ScaleBackground}">
                        <TextBlock x:Name="txtScaleValue" Text="{Binding DspWeight}" FontSize="30"
                                           Style="{StaticResource ScaleValueStyle}"/>
                    </Border>
                    <TextBlock Grid.Row="2" Text="{Binding LowerWeight}" Style="{StaticResource ScaleValueStyle}"/>
                </Grid>
            </Grid>

            <Grid x:Name="Footer" Grid.Row="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                    <TextBlock Text="{Binding Path=W[CUICurrentPrintName], Source={StaticResource R}, FallbackValue='프린트명'}" Margin="2,0"/>
                    <TextBlock Text="{Binding curPrintName, FallbackValue='N/A'}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Margin="5,0" x:Name="btnChangePrint" Width="100" Content="{Binding W[CUIChangePrintButtonText], Source={StaticResource R}, FallbackValue='프린터변경'}" 
                            Style="{StaticResource btnStyle}" Command="{Binding ChangePrintCommand}"/>
                    <Button Margin="5,0" x:Name="btnDispensing" Width="100" Content="{Binding W[CUIDispensingButtonText], Source={StaticResource R}, FallbackValue='소분'}" 
                            Style="{StaticResource btnStyle}" IsEnabled="{Binding DispensebtnEnable}" Command="{Binding DispensingCommandAsync}"/>
                    <Button Margin="5,0" x:Name="btnCharging" Width="100" Content="{Binding W[CUIChargingButtonText], Source={StaticResource R}, FallbackValue='투입'}" 
                            Style="{StaticResource btnStyle}" IsEnabled="{Binding ChargebtnEnable}" Command="{Binding ChargingCommandAsync}"/>
                    <Button Margin="5,0" x:Name="btnConfirm" Width="100" Content="{Binding W[CUIDataWriteToEBRButtonText], Source={StaticResource R}, FallbackValue='기록'}" 
                            Style="{StaticResource btnStyle}" Command="{Binding ConfirmCommandAsync}"/>
                    <Button Margin="5,0" x:Name="btnNoRecordConfirm" Width="100" Content="{Binding W[CUIDefaultDataWriteToEBRButtonText], Source={StaticResource R}, FallbackValue='기록없음'}" 
                            Style="{StaticResource btnStyle}" Command="{Binding NoRecordConfirmCommand}"/>
                    <Button Margin="5,0" x:Name="btnClose" Width="100" Content="{Binding [CUICloseButtonText], Source={StaticResource R}, FallbackValue='종료'}"
                            Style="{StaticResource btnStyle}" Click="btnClose_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </toolkit:BusyIndicator>
</ShopFloor:ShopFloorCustomWindow>